public class Main {
    public static void main(String[] args) {
        Funcionario F = new Funcionario("Marciano", 45.0, 150);
        Lider L = new Lider("Mariane", 15.0, 150);
        Gerente G = new Gerente("Pedro", 89.0, 150);

        System.out.println(F.nome + ": " + F.cSalario());
        System.out.println(L.nome + ": " + L.calcularSalario());
        System.out.println(G.nome + ": " + G.calcularSalario());
    }
}


Class Funcionario {
    private String funcao;
    private String nome;
    private int hora;
    private double CalcHora;

public Funcionario(String funcao, String nome, int hora, doule CalcHora) {
        this.funcao = funcao;
        this.nome = nome;
        this.CalcHora = hora ;
        this.hora = Calchora;
        
}

  }

    public double calcularSalario() {
        return hora * CalcHora;
    }
}
class Lider extends Funcionario {
    public Lider(String nome, double hora, int CalcHora) {
        super(nome, hora, CalcHora);
    }

    public double calcularSalario() {
        return super.calcularSalario() * 1.02;
    }
}

class Gerente extends Funcionario {
    public Gerente(String nome, double hora, int CalcHora) {
        super(nome, hora, CalcHora);
    }

    public double calcularSalario() {
        return super.calcularSalario() * 1.05;
    }
}

